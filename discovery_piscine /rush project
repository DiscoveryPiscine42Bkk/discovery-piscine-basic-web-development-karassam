    <script>
        $(document).ready(function() {
            $('.menu-toggle').click(function() {
                $('.nav-links').toggleClass('active');
            });
            
            $('#home-link').click(function(e) {
                e.preventDefault();
                showPage('home-page');
            });
            
            function showPage(pageId) {
                $('#home-page').hide();
                
                $('#' + pageId).show();
                
                $('.nav-links').removeClass('active');
                
                $('html, body').animate({ scrollTop: 0 }, 300);
            }
        });
    </script>
